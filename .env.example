APP_NAME=AI Agent Core
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agent_core
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=agent_memory
QDRANT_API_KEY=

VLLM_BASE_URL=http://localhost:8001/v1
VLLM_API_KEY=
VLLM_MODEL=default
VLLM_MAX_TOKENS=4096
VLLM_TEMPERATURE=0.7
VLLM_TIMEOUT=60.0

AGENT_MAX_ITERATIONS=10
AGENT_MAX_TOOL_CALLS=50
AGENT_TOOL_TIMEOUT=30.0
AGENT_REFLECTION_ENABLED=true

MEMORY_SHORT_TERM_MAX_MESSAGES=100
MEMORY_COMPRESSION_THRESHOLD=50
MEMORY_VECTOR_DIMENSION=1536

RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
